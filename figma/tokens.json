{
  "$schema": "https://schemas.tokens.studio/schemas/figma.tokens.json",
  "$description": "EventEase base tokens for Tokens Studio",
  "theme": {
    "$type": "typography",
    "fontFamilies": {
      "$type": "fontFamilies",
      "base": "Inter, Roboto, system-ui, -apple-system, Segoe UI, Arial"
    },
    "fontSizes": {
      "$type": "fontSizes",
      "xs": "12",
      "sm": "14",
      "md": "16",
      "lg": "18",
      "xl": "24",
      "2xl": "32"
    },
    "lineHeights": {
      "$type": "lineHeights",
      "tight": "120%",
      "normal": "140%",
      "relaxed": "160%"
    },
    "letterSpacing": {
      "$type": "letterSpacing",
      "default": "0%"
    }
  },
  "color": {
    "$type": "color",
    "primary": {
      "50": "#eff6ff",
      "100": "#dbeafe",
      "200": "#bfdbfe",
      "300": "#93c5fd",
      "400": "#60a5fa",
      "500": "#3b82f6",
      "600": "#2563eb",
      "700": "#1d4ed8",
      "800": "#1e40af",
      "900": "#1e3a8a"
    },
    "surface": {
      "background": "#0b0c10",
      "elevated": "#111217",
      "panel": "#161821",
      "muted": "#1c1f2b"
    },
    "text": {
      "primary": "#f5f7ff",
      "secondary": "#c9cdd7",
      "muted": "#9aa1af"
    },
    "feedback": {
      "success": "#16a34a",
      "warning": "#d97706",
      "danger": "#dc2626",
      "info": "#0284c7"
    },
    "border": {
      "default": "#2a2f3a",
      "focus": "#60a5fa"
    }
  },
  "spacing": {
    "$type": "spacing",
    "4": "4",
    "8": "8",
    "12": "12",
    "16": "16",
    "24": "24",
    "32": "32",
    "48": "48",
    "64": "64"
  },
  "radius": {
    "$type": "borderRadius",
    "sm": "6",
    "md": "10",
    "lg": "14",
    "xl": "20"
  },
  "elevation": {
    "$type": "boxShadow",
    "sm": {
      "color": "#000000",
      "type": "dropShadow",
      "x": 0,
      "y": 1,
      "blur": 2,
      "spread": 0,
      "opacity": 0.25
    },
    "md": {
      "color": "#000000",
      "type": "dropShadow",
      "x": 0,
      "y": 4,
      "blur": 12,
      "spread": -2,
      "opacity": 0.3
    }
  },
  "$themes": [
    {
      "id": "eventease-dark",
      "name": "EventEase Dark",
      "selectedTokenSets": {
        "color": "enabled",
        "spacing": "enabled",
        "radius": "enabled",
        "elevation": "enabled",
        "theme": "enabled"
      },
      "$figmaStyleReferences": {}
    }
  ]
}


